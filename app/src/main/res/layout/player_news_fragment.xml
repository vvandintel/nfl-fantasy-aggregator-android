<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_news_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent" >

    <TextView
        android:id="@+id/get_player_news_text"
        android:textSize="24sp"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="@string/get_player_news_text"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/player_news_recycler_view"
        android:scrollbars="vertical"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_player_news_text"
        app:layout_constraintRight_toRightOf="parent"
        android:scrollbarStyle="outsideInset" />

</android.support.constraint.ConstraintLayout>